<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- DatePicker in Calendar Mode (Default) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar Mode"
        android:textSize="18sp"
        android:padding="10dp"/>

    <DatePicker
        android:id="@+id/datePickerCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- DatePicker in Spinner Mode -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner Mode"
        android:textSize="18sp"
        android:padding="10dp"/>

    <DatePicker
        android:id="@+id/datePickerSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"/> <!-- ðŸ’¡ Change: For Spinner Mode -->

</LinearLayout>
